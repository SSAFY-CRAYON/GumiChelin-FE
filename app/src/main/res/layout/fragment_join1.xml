<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.login.Join1Fragment">

    <LinearLayout
        android:id="@+id/back_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_button_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_arrow_back_24"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/class_number_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/back_button_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="학번 입력"
            android:textSize="32dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="삼성 청년SW아카데미에서 제공된 학번을 입력하세요.\n(타인의 학번을 사용할 경우 서비스를 이용하실 수 없습니다.)"
            android:textColor="@color/deep_gray"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:hint="학번"
            android:textColorHint="@color/light_gray"
            android:paddingLeft="8dp"
            android:background="@drawable/edittext_shadow"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/info_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/class_number_input_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="기수 및 트랙 입력"
            android:textSize="32dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="교육과정에 입과한 기수를 입력하세요."
            android:textColor="@color/deep_gray"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:hint="기수"
            android:textColorHint="@color/light_gray"
            android:paddingLeft="8dp"
            android:background="@drawable/edittext_shadow"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:hint="트랙"
            android:textColorHint="@color/light_gray"
            android:paddingLeft="8dp"
            android:background="@drawable/edittext_shadow"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:hint="반 번호"
            android:textColorHint="@color/light_gray"
            android:paddingLeft="8dp"
            android:background="@drawable/edittext_shadow"/>

    </LinearLayout>
    
    <Button
        android:id="@+id/go_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:background="@drawable/button1_shadow"
        android:text="다음"
        android:textColor="@color/white"
        />

</androidx.constraintlayout.widget.ConstraintLayout>