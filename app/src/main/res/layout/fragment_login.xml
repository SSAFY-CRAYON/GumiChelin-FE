<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/go_join_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="GuMi-Chelin"
            android:textSize="40dp"
            android:textColor="@color/peaches"
            android:fontFamily="@font/bold_italic" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="8dp"
            android:hint="학번 입력"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edittext_shadow"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:hint="비밀번호"
            android:textColorHint="@color/light_gray"
            android:background="@drawable/edittext_shadow"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="12dp"
            android:text="로그인"
            android:textColor="@color/white"
            android:background="@drawable/button1_shadow"/>

    </LinearLayout>

    <Button
        android:id="@+id/go_join_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="새 계정 만들기"
        android:textColor="@color/peaches"
        android:background="@drawable/button2_shadow"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>